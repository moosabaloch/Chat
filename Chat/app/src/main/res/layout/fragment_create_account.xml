<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"

    tools:context=".ui.Fragments.CreateAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ff00b2ff"
        android:id="@+id/linearLayoutSearchFragGroup"
        android:gravity="right"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Create Account"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextCreateAccountFragmentFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="@string/fullname"
        android:inputType="textPersonName"
        android:layout_below="@+id/linearLayoutSearchFragGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextCreateAccountFragmentEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email.com"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/editTextCreateAccountFragmentFullName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextCreateAccountFragmentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pass"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/editTextCreateAccountFragmentEmailAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextCreateAccountFragmentPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phoneNumber"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="phone"
        android:layout_below="@+id/editTextCreateAccountFragmentPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonCreateAccountFragmentCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createAccount"
        android:layout_below="@+id/editTextCreateAccountFragmentPhone"
        android:layout_alignLeft="@+id/editTextCreateAccountFragmentPhone"
        android:layout_alignStart="@+id/editTextCreateAccountFragmentPhone"
        android:layout_alignRight="@+id/editTextCreateAccountFragmentPhone"
        android:layout_alignEnd="@+id/editTextCreateAccountFragmentPhone"
        android:background="#a2ffca00" />
</RelativeLayout>
