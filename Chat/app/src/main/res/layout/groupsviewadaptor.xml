<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e8e8"
>

    <ImageView
        android:id="@+id/groupAdaptorImageViewGroupImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_dialog_dialer"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Group Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/groupAdaptorImageViewGroupImage"
        android:layout_toEndOf="@+id/groupAdaptorImageViewGroupImage"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="GroupDescription"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/groupAdaptorImageViewGroupImage"
        android:layout_toEndOf="@+id/groupAdaptorImageViewGroupImage"
        android:layout_margin="5dp"
        android:layout_marginLeft="7dp" />

</RelativeLayout>