<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e8e8">

    <ImageView
        android:id="@+id/groupAdaptorImageViewGroupImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@android:drawable/ic_dialog_dialer" />

    <TextView
        android:id="@+id/groupAdaptorTextViewGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@+id/groupAdaptorImageViewGroupImage"
        android:layout_toRightOf="@+id/groupAdaptorImageViewGroupImage"
        android:text="Group Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/groupAdaptorTextViewGroupDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GroupDescription"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/groupAdaptorTextViewGroupName"
        android:layout_alignLeft="@+id/groupAdaptorTextViewGroupName"
        android:layout_alignStart="@+id/groupAdaptorTextViewGroupName" />

    <ImageButton
        android:id="@+id/groupAdaptorImageButtonJoinGroupButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/add"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/groupAdaptorTextViewGroupName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>