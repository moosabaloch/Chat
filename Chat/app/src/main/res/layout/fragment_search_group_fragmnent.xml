<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pana.com.chat.SearchGroupFragment">

    <RelativeLayout
        android:id="@+id/linearLayoutSearchFragGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff00b2ff">

        <TextView
            android:id="@+id/textViewSearchFragGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="@string/searchgroups"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/groupFragmentButtonAddNewGroup"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#ff00b2ff"
            android:src="@android:drawable/ic_menu_add"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/textViewSearchFragGroup"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textViewSearchFragGroup" />

    </RelativeLayout>

    <ListView
        android:id="@+id/groupSearchFragmentListViewGroupsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutSearchFragGroup"
        android:padding="10dp" />

</RelativeLayout>
