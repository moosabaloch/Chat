<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMaterialGray"
    android:padding="5dp">


    <com.pkmmte.view.CircularImageView
        android:id="@+id/chatAdaptorImageViewProfilePictureMe"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@android:drawable/ic_menu_myplaces"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="4dp"
        app:shadow="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/chatAdaptorTextViewTimeMe"
        android:layout_toEndOf="@+id/chatAdaptorImageViewProfilePictureMe"
        android:background="@drawable/bgbubble"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/chatAdaptorTextViewForNameMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/username"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/chatAdaptorTextViewForMessageMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chatAdaptorTextViewForNameMe"
            android:text="@string/message"
            android:textColor="@color/colorSecondaryText" />


    </RelativeLayout>

    <TextView
        android:id="@+id/chatAdaptorTextViewTimeMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="time" />


</RelativeLayout>