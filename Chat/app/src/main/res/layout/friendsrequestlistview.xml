<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Cancel"
        android:id="@+id/friendreq_btn_cancel"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff00b2ff"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Accept"
        android:layout_marginBottom="5dp"
        android:textColor="#FFFFFF"
        android:id="@+id/friendreq_btn_accept"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/friendreq_btn_cancel"
        android:layout_toLeftOf="@+id/friendreq_btn_cancel"
        android:layout_toStartOf="@+id/friendreq_btn_cancel"
        android:background="#ff00b2ff"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>