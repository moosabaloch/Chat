<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pana.com.chat.GroupFragment">

    <RelativeLayout
        android:id="@+id/linearLayoutSearchFragGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff00b2ff">

        <TextView
            android:id="@+id/textViewSearchFragGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="@string/mygroups"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/groupFragmentButtonAddNewGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/textViewSearchFragGroup"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/groupSearchFragmentButtonLogout"
            android:background="#ff00b2ff"
            android:padding="10dp"
            android:src="@android:drawable/ic_menu_search"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/groupSearchFragmentButtonLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#ff00b2ff"
            android:text="@string/logout"
            android:textColor="#ffffff" />

    </RelativeLayout>

</RelativeLayout>
